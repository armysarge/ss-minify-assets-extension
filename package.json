{
  "name": "ss-minify-assets-extension",
  "displayName": "SS Minify CSS & JS",
  "description": "Right-click to minify CSS and JavaScript files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "publisher": "ShaunS",
  "repository": {
    "type": "git",
    "url": "https://github.com/armysarge/ss-minify-assets-extension"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:minify-assets.minifyFile",
    "onCommand:minify-assets.minifyDirectory"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "minify-assets.minifyFile",
        "title": "Minify CSS/JS"
      },
      {
        "command": "minify-assets.minifyDirectory",
        "title": "Minify all CSS/JS in directory"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "minify-assets.minifyFile",
          "group": "7_modification",
          "when": "resourceExtname == .css || resourceExtname == .js"
        },
        {
          "command": "minify-assets.minifyDirectory",
          "group": "7_modification",
          "when": "explorerResourceIsFolder"
        }
      ],
      "editor/context": [
        {
          "command": "minify-assets.minifyFile",
          "group": "7_modification",
          "when": "resourceExtname == .css || resourceExtname == .js"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "typescript": "^4.3.2"
  }
}
